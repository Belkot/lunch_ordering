.center-block.col-md-6{:style => "float: none"}
  .panel.panel-default
    .panel-heading Menu:
    .panel-body
      %table.table.table-striped.table-hover.table-condensed
        %thead
          %tr
            %th #
            %th Name
            %th Price
            %th Type
            %th
            %th
        %tbody
          - @courses.each_with_index do |course, index|
            %tr
              %th{scope: 'row'}
                = index + 1
              %td= course.name
              %td= number_to_currency course.price, precision: 2
              %td= course.course_type.name
              %td= link_to 'Edit', edit_course_path(course), class: 'btn btn-success btn-xs'
              %td= link_to 'Destroy', course, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger btn-xs'
        %tfoot
          = link_to 'New Course', new_course_path, class: 'btn btn-primary'
